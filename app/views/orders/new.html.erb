<h2>CHECKOUT</h2>
<p>-------------------------</p>
<%= form_with model: @order, class: "order_form" do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :address %>
<%= f.text_field :address %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :credit_card %>
<%= f.text_field :credit_card %>

<%= f.label :exp %>
<%= f.text_field :exp %>

<%= f.submit "Complete Order", class: "order_form" %>

<% end %>
