
<main class="root">
    <h3>Welcome to Toonsy Townsy </h3>
    <h5>Where you can fulfill all your cartoonsy dreams . . . </h5>
    <%# <img src="https://placedog.net/500" alt="placeholder image"> %>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 h-100" src='<%=@products.first.photo_url%>' alt="Burger Pic">
      <div class="carousel-caption d-none d-md-block">
        <h1><%= link_to "Shop Bob's Products", products_path(@products.id) %></h1>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 h-100" src='<%=@products.last.photo_url%>' alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
        <h1><%= link_to "Shop Hank's Products", products_path(@products.last.id) %></h1>
      </div>
      </div>
    </div>
    <div class="carousel-item"> 
       <img class="d-block w-100 h-100" src="<%=@products.third.photo_url%>" alt="Third slide">
       <div class="carousel-caption d-none d-md-block">
       <h1><%= link_to "Shop This Product", products_path(@products.third.id) %></h1>
      </div>
    </div> 
  </div>
</div>
  <!-- Controls -->
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</main>

