
<main class="root">
    <h3>Welcome to Toonsy Townsy </h3>
    <h5>Where you can fulfill all your cartoonsy dreams . . . </h5>
<section class = slideshow>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100 h-100" src='<%=@products.first.photo_url%>' alt="Burger Pic">
      <div class="carousel-caption d-none d-md-block">
        <h1><%= link_to "Shop #{@products.first.user.username}'s Products", user_products_path(@products.first.user.id)  %></h1>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100 h-100" src='<%=@products.last.photo_url%>' alt="Second slide">
      <div class="carousel-caption d-none d-md-block">
        <h1><%= link_to "Shop #{@products.last.user.username}'s Products", user_products_path(@products.last.user.id) %></h1>
      </div>
    </div>
    <div class="carousel-item"> 
       <img class="d-block w-100 h-100" src="<%=Product.find_by(id:6).photo_url %>" alt="Third slide">
        <div class="carousel-caption d-none d-md-block"> 
        <h1><%= link_to "Shop #{@products[6].user.username}'s Products", user_products_path(User.find_by(id: 5)) %></h1>
      </div>
    </div> 
  </div>
</div>

  <!-- Controls -->
<div class="arrows">
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  </div>
  
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>
</main>

