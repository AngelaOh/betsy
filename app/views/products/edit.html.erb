<main>
    <header>
        <h1>Edit item in your shop</h1>
    </header>
    
    <section>
        <%# render partial: "form", locals: {
            form_class: "edit-product",
            url: user_product_path, 
            action_name: "Update Product"
        } %>
        <%= form_with model: @product, url: user_product_path, class: "product_form" do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %>

            <%= f.label :price %>
            <%= f.text_field :price %>

            <%= f.label :inventory %>
            <%= f.text_field :inventory %>

            <%= f.label :description %>
            <%= f.text_field :description %>

            <%= f.label :category %>
            <%= f.select :category, Category.all.map {|category| [category.name] } %>
            <%# collection_check_boxes(:product, :category_ids, Category.all, :id, :name)%>
            
            <%= f.label :photo_url %>
            <%= f.text_field :photo_url %>
            <%# f.text_field :photo_url, :selected => "http://gianfreda.net/wp-content/uploads/2017/01/disney-printable-coloring-pages-img-213749.jpg" %>

            <%= f.submit "Update Product", class: "product_form", method: :patch %>
        <% end %>
    </section>
</main>
